<!DOCTYPE html>
<html>
  <head>
    <title>Mini MessageBoard</title>
    <link rel="stylesheet" href="/styles.css" />
    <%- include("./header"); -%>
  </head>
  <body>
    <div class="container">
      <ul>
        <% messages.forEach((message)=> { %>
        <li>
          <p><strong><%= message.user %></strong></p>
          <p><%= message.text %></p>
          <p><small><%= message.added.toLocaleString() %></small></p>
          <a href="/messages/<%= message.user %>" class="button">Open</a>
        </li>
        <% }) %>
      </ul>
      <a href="/new" class="button">Add a new message</a>
    </div>
  </body>
  <footer><%- include ("./footer"); -%></footer>
</html>
